<% include ../partials/header %> 
<!-- Page Wrapper -->
 
   <div id="wrapper" class="bg4">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
      <!-- Nav Item - Dashboard -->
      <li class="nav-item text-center ml-4 py-md-3">
        
          <button id="center" type="button" class="btn btn-light border ml-4 d-none d-md-block"><a href="/profile/new"><strong>Announcement</strong></a></button>
          
      </li>

  

        <!-- Divider -->
      <hr class="sidebar-divider mt-2">

      <!-- Nav Item - Pages Collapse Menu -->
      <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          <i class="fas fa-fw fa-cog"></i>
          <span>Employee Profile</span>
        </a>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
          
            <a class="collapse-item" href="/profile/<%=currentUser._id%>/vacation">Vacation</a>
            <a class="collapse-item" href="/profile/<%=currentUser._id%>/kpi">KPIs</a>
            <a class="collapse-item" href="/profile/learning">Learning Tools</a>
          </div>
        </div>
      </li>
      
         <!-- Divider -->
      <hr class="sidebar-divider">

      <!-- Nav Item - Utilities Collapse Menu -->
      <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
          <i class="fas fa-fw fa-wrench"></i>
          <span>Organizational</span>
        </a>
        <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
           
          <div class="bg-white py-2 collapse-inner rounded">
            
            <a class="collapse-item" href="/profile/software">Software</a>
            <a class="collapse-item" href="/profile/chart">Chart</a>
            <a class="collapse-item" href="/profile/directory">Company Directory</a>
           
          </div>
        </div>
      </li>


   
      

    </ul>
    <!-- End of Sidebar -->

   <!-- Content Row -->

          <div class="col-lg-6 px-0 ml-lg-5 justify-content-center ">

            <!-- Area Chart -->
            <div class="col-lg-12 w-100 p-3 " style="height:35rem;"  id="one">
              <div class="card shadow mb-4 scroll">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row justify-content-center" >
                  <h6 class="m-0 font-weight-bold text-primary ">Announcements</h6>
                  </div>
                <!-- Card Body -->
          
        <% allProfile.slice().reverse().forEach(function(user){ %>
           <div class="card-body">
                  <h5 class="card-title"><%= user.author %></h5>
                  <p class="card-text dateAnnoun"><%= user.title%><span><%= user.created.toDateString() %></span></p>
                  </div>
                  <hr class="my-0">
                        
                  <% }) %>
                </div>
              </div>
            
            

<div class="row shadow ml-3 pb-3 ml-md-3 mr-3 border bg-white rounded">

                            <!-- Suggestion Box -->
                            <section class="containerfluid px-4 col-lg-6" id="feedback-box">
                            
                                <form class="feedback-form" action="/profile/<%=currentUser._id%>/suggestion" method="post">
                                  <div class="feedback-form-group">
                                    <label for="feedback-textarea"> <h6 class="font-weight-bolder mt-2 pt-lg-2">Help us improve your experience.</h6></label>
                                   <div>
                                    <input type="text" name="suggestion[title]" class=" border border-light border-top border-bottom mb-lg-1" placeholder="Insert a title">
                                    </div>
                                    <textarea class="feedback-form-control border" name="suggestion[comment]"  rows="4" cols="40"></textarea>
                                  </div>
                                <div class="btn-group">
                                <button class="suggestionColor btn btn-light mr-2 rounded"type="submit" name="button">Submit</button>
                                <button 
                                 class="suggestionColor btn btn-light border rounded "type="button"><a href="/profile/<%=currentUser._id%>/suggestion">View Your Suggestions</a>
                                 </button>
                                 </div>
                                </form>
                                
                                
                          </section>
                          
                              </div>
            
    
        <!-- /.container-fluid -->

    
      <!-- End of Main Content -->
</div>
    



  <!-- End of Page Wrapper -->


<% include ../partials/footer %>